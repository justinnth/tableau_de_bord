{% extends 'base.html.twig' %}

{% block title %}Index des formations{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="{{ path('app_homepage') }}">
                <img src="{{ asset('img/logo-header-petit.png') }}" width="auto" height="30" alt="logo">
            </a>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            </ul>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-cog"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="{{ path('app_account') }}">
                        <i class="fas fa-user"></i> Mon compte
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('app_logout') }}">
                        <i class="fas fa-power-off"></i> Se déconnecter
                    </a>
                </div>
            </div>
        </div>
    </nav>
    <hr>
    <div class="container-fluid">
        <h1>Index des formations et des formateurs à qui l'évènement est lié</h1>

        <table class="table table-striped table-sm">
            <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Début</th>
                <th scope="col">Fin</th>
                <th scope="col">Titre</th>
                <th scope="col">Formateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for evenement_planning in evenement_plannings %}
                <tr>
                    <th scope="row">{{ evenement_planning.id }}</th>
                    <td>{{ evenement_planning.beginAt ? evenement_planning.beginAt|date('d/m/Y à H:i') : '' }}</td>
                    <td>{{ evenement_planning.endAt ? evenement_planning.endAt|date('d/m/Y à H:i') : '' }}</td>
                    <td>{{ evenement_planning.title }}</td>
                    <td>{{ evenement_planning.formateur.nom }} {{ evenement_planning.formateur.prenom }}</td>
                    <td>{{ evenement_planning.formation.titre }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('evenement_planning_edit', {'id': evenement_planning.id}) }}">Modifier</a>
                        <a class="btn btn-secondary" href="{{ path('evenement_planning_show', {'id': evenement_planning.id}) }}">Afficher</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune évènement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-success" href="{{ path('evenement_planning_new') }}">Créer un nouvel évènement</a>
    </div>
{% endblock %}
