{% extends 'base.html.twig' %}

{% block title %} Tableau de bord {% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="display-4">Bienvenue sur le tableau de bord!</h1>
                <p class="lead">Vous êtes actuellement connecté en tant que
                    <span class="badge badge-success">
                {% if app.user.username == "admin" %}
                    administrateur
                {% elseif app.user.username == "visu" %}
                    visualisateur
                {% elseif app.user.username == "user" %}
                    utilisateur
                {% elseif app.user.username == "formateur" %}
                    formateur
                {% endif %}
            </span>
                </p>
            </div>
            <div class="col col-lg-2">
                <a href="{{ path('app_logout') }}">
                    <button type="button" class="btn btn-labeled btn-danger">
                        <span class="btn-label"><i class="fas fa-power-off"></i></span>
                        Se déconnecter
                    </button>
                </a>
            </div>
        </div>
        <hr class="my-4">
        <div class="container" style="display:table">
            <div class="box">
                <a href="{{ path('app_formateurs', {'id': 'all'}) }}">
                    <div class="icon">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <h1>Formateurs</h1>
                    </div>
                    <div class="content">
                        <h3>Accéder aux formateurs</h3>
                        <p>Cliquez pour accéder à la liste de tous les formateurs, leur planning, leurs formations et d'autres informations les concernant.</p>
                    </div>
                </a>
            </div>
            <div class="box">
                <a href="{{ path('app_formations', {'id': 'all'}) }}">
                    <div class="icon">
                        <i class="fas fa-book-open"></i>
                        <h1>Formations</h1>
                    </div>
                    <div class="content">
                        <h3>Accéder aux formations</h3>
                        <p>Cliquez pour accéder à la liste de toutes les formations disponibles</p>
                    </div>
                </a>
            </div>
            <div class="box">
                <div class="icon">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <div class="content">
                    <h3>Todo</h3>
                    <p>TODO</p>
                </div>
            </div>
            <div class="box">
                <div class="icon">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <div class="content">
                    <h3>Todo</h3>
                    <p>TODO</p>
                </div>
            </div>
        </div>
    </div>
    <hr>
{% endblock %}