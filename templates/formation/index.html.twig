{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Duree</th>
                <th>Reference</th>
                <th>Pedagogie</th>
                <th>PublicVise</th>
                <th>Prerequis</th>
                <th>Lieu</th>
                <th>Cpf</th>
                <th>Photo</th>
                <th>Lien</th>
                <th>Facebook</th>
                <th>TrameARealiser</th>
                <th>TrameValiderIperia</th>
                <th>Numero_cpf</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.titre }}</td>
                <td>{{ formation.duree }}</td>
                <td>{{ formation.reference }}</td>
                <td>{{ formation.pedagogie }}</td>
                <td>{{ formation.publicVise }}</td>
                <td>{{ formation.prerequis }}</td>
                <td>{{ formation.lieu }}</td>
                <td>{{ formation.cpf ? 'Yes' : 'No' }}</td>
                <td>{{ formation.photo }}</td>
                <td>{{ formation.lien }}</td>
                <td>{{ formation.facebook }}</td>
                <td>{{ formation.trameARealiser ? 'Yes' : 'No' }}</td>
                <td>{{ formation.trameValiderIperia ? 'Yes' : 'No' }}</td>
                <td>{{ formation.numeroCpf }}</td>
                <td>{{ formation.createdAt ? formation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ formation.updatedAt ? formation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}">show</a>
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Create new</a>
{% endblock %}
